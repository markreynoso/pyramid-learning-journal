{% extends "layout.jinja2" %}
{% block content %}
<!-- Page Header -->
    <header class="masthead" style="background-image: url('../static/img/post-bg.jpg')">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1>{{ blog.title }}</h1>
              <h2 class="subheading">some thoughts by mark</h2>
            </div>
          </div>
        </div>
      </div>
    </header>
<!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <h2 class="section-heading">{{ blog.title }}</h2>
            <p class="post-meta">{{ blog.creation_date }}</p>
            <p>{{ blog.body }}</p>
            <div class="clearfix">
              <a class="btn btn-secondary float-right" href="{{ request.route_url('update', id=blog.id) }}">Edit Entry &rarr;</a>
            </div>
          </div>
        </div>
      </div>
    </article>

    <hr>
{% endblock %}